<div class="row">
  <div class="col s9">
    <div class="card">
      <div class="card-content">
        <span class="card-title">Add Job to <%=@shift.employee.proper_name%>'s Shift</span>
        <%= simple_form_for(@shift_job) do |f| %>
          <%= f.error_notification %>
          <div class="row">
            <div class="form-inputs">
              <%= f.input :shift_id, as: :hidden, input_html: {value: @shift.id} %>
              <%= f.input :job_id, collection: Job.active.to_a, include_blank: true%>
          </div>
        </div>
      </div>
    </div>
      <div class="row">
        <div class="form-actions col s9">
          <%= f.button :submit %>
        </div>
      </div>
    <% end %>
  </div>
</div>
<%= link_to 'Back', :back %>
