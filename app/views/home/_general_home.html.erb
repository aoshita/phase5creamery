<div class="row">
  <div class="col s8">
    <div class="carousel">
      <a class="carousel-item" href="#one"><%= image_tag 'img1.jpg' %></a>
      <a class="carousel-item" href="#two"><%= image_tag 'img2.jpg' %></a>
      <a class="carousel-item" href="#three"><%= image_tag 'img3.jpg' %></a>
      <a class="carousel-item" href="#four"><%= image_tag 'img4.jpg' %></a>
      <a class="carousel-item" href="#five"><%= image_tag 'img5.jpg' %></a>
      <a class="carousel-item" href="#six"><%= image_tag 'img6.jpg' %></a>
      <a class="carousel-item" href="#seven"><%= image_tag 'img7.jpg' %></a>
    </div>
    <br><br>
    <div class="card">
      <div class="card-content">
        <span class="card-title"><em>Welcome To A & M Creamery</em></span>
				<br>
        <p>The Creamery is a a series of small ice cream
				shops spread around the greater Pittsburgh area.
				Our ice cream is delicious, nutritious and amazing in every way.
        </p>
        <p>&nbsp;</p>
      </div>
    </div>
  </div>
	<div class="col s4">
    <div class="card">
      <div class="card-content">
        <h5> Stores Owned by AMC</h5>
        <% if @active_stores.empty? %>
          <p>There are no active stores at this time.</p>
        <% else %>
          <table class="striped highlight">
            <thead>
              <th>Name</th>
              <th>Phone</th>
            </thead>
            <% @active_stores.each do |store| %>
              <tr>
                <td><%= store.name%></td>
                <td><%= number_to_phone store.phone %></td>
              </tr>
            <% end %>
          </table>
          <p class="supertiny"></p>
          <br />
        <% end %>
      </div>
    </div>

</div>
