<div class="card">
  <div class="card-content">
    <h4><%= state.capitalize %> Pay Grades in AMC</h4>

    <% if pay_grades.empty? %>
      <p>There are no <%= state.downcase %> pay_grades at this time.</p>
    <% else %>

      <table class="striped highlight">
        <thead>
          <th>Level</th>
          <th>Active</th>
        </thead>
        <% pay_grades.each do |pay_grade| %>
          <tr>
            <td><%= pay_grade.level %></td>
            <td><%= pay_grade.active ? 'Yes' : 'No' %></td>
          </tr>
        <% end %>
      </table>
      <p class="supertiny"></p>
      <br />
      <%= will_paginate pay_grades, previous_label: "Previous&nbsp;", next_label: "&nbsp;Next" %>
    <% end %>
  </div>
</div>
